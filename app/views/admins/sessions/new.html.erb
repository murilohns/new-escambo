<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= t('labels.identify_yourself') %></h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name, role:"form")) do |f| %>
                        <fieldset>
                            <div class="form-group">
                                <%= f.label t('labels.email') %>:
                                <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"E-mail", type:"email", autofocus: "autofocus" %>
                            </div>
                            <div class="form-group">
                                <%= f.label t('labels.password') %>:
                                <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password", type: "password" %>
                            </div>
                            <div class="checkbox">
                                    <%= f.check_box :remember_me %>
                                    <%= f.label t('labels.remember_me') %>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <%= f.submit t('labels.enter'), class: "btn btn-lg btn-success btn-block" %>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<% flash.each do |key, value| %>
    <script>
       $.notify("<%= value %>", "info") 
    </script>
<% end %>

<%= render "admins/shared/links" %>
